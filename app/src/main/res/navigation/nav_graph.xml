<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/testFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ksv.pillsnumberone.presentation.view.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_editFragment"
            app:destination="@id/editFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.ksv.pillsnumberone.presentation.view.AddFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_editFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="recipe"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="times"
            app:argType="com.ksv.pillsnumberone.data.EatingTime"
            android:defaultValue="BREAKFAST" />
        <argument
            android:name="newMedicine"
            app:argType="boolean"
            android:defaultValue="true" />
        <action
            android:id="@+id/action_editFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/testFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.ksv.pillsnumberone.presentation.view.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" >
        <action
            android:id="@+id/action_testFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_testFragment_to_editDialog"
            app:destination="@id/editDialog" />
        <action
            android:id="@+id/action_testFragment_to_setTimeDialog"
            app:destination="@id/setTimeDialog" />
    </fragment>
    <dialog
        android:id="@+id/editDialog"
        android:name="com.ksv.pillsnumberone.presentation.view.EditDialog"
        android:label="EditDialog" >
        <action
            android:id="@+id/action_editDialog_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/testFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="id"
            app:argType="long" />
    </dialog>
    <dialog
        android:id="@+id/setTimeDialog"
        android:name="com.ksv.pillsnumberone.presentation.view.SetTimeDialog"
        android:label="SetTimeDialog" >
        <action
            android:id="@+id/action_setTimeDialog_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/testFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="itemId"
            app:argType="long" />
        <argument
            android:name="time"
            app:argType="string" />
    </dialog>
</navigation>